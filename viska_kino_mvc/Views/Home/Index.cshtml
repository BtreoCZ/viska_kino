@model IEnumerable<Data_Access.Models.Screening>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Today's Screenings</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Screening Time</th>
                    <th>Film</th>
                    <th>Screening room</th>
                    <th>Capacity</th>
                    <th>Reservation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var screening in Model)
                {
                    <tr>
                        <td>@screening.ScreeningTime.ToString("g")</td>
                        <td>@screening.Film.Title</td>
                        <td>@screening.ScreeningRoom.Name</td>
                        <td>@screening.Capacity</td>
                        <td>
                            <a class="btn btn-primary"
                               asp-controller="Home"
                               asp-action="Create"
                               asp-route-screeningId="@screening.Id">
                                Rezervace
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No screenings are scheduled for today.</p>
    }
</div>